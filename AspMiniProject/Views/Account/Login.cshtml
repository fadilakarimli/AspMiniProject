@model LoginVM
<style>
    body {
        background: url('/images/login-bg.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Poppins', sans-serif;
    }

    .login-wrapper {
        max-width: 400px;
        margin: 80px auto;
        background-color: rgba(255, 255, 255, 0.95);
        padding: 40px 30px;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
    }

    .login-title {
        font-weight: 600;
        text-align: center;
        margin-bottom: 30px;
        color: #343a40;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            border-color: #6f42c1;
            box-shadow: 0 0 0 0.2rem rgba(111, 66, 193, 0.25);
        }

    .btn-purple {
        background: #6f42c1;
        color: white;
        border: none;
        border-radius: 50px;
        padding: 10px;
        transition: all 0.3s ease;
    }

        .btn-purple:hover {
            background: #5936a1;
        }

    .form-floating label {
        color: #6c757d;
    }

    .text-danger {
        font-size: 0.9rem;
    }
</style>

<div class="login-wrapper">
    <h2 class="login-title">Welcome Back 👋</h2>

    <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>

    <form method="post" asp-controller="Account" asp-action="Login">
        <div class="form-floating mb-3">
            <input asp-for="EmailOrUserName" class="form-control" placeholder="Email or Username" />
            <label asp-for="EmailOrUserName">Email or Username</label>
            <span class="text-danger" asp-validation-for="EmailOrUserName"></span>
        </div>

        <div class="form-floating mb-4">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <label asp-for="Password">Password</label>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-purple">Login 🔐</button>
        </div>
    </form>
</div>
