@model RegisterVM
<style>
    body {
        background: linear-gradient(135deg, #74ebd5, #ACB6E5);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-card {
        background-color: white;
        border-radius: 25px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        transition: all 0.4s ease;
    }

        .register-card:hover {
            transform: scale(1.01);
        }

    .form-control:focus {
        border-color: #6f42c1;
        box-shadow: 0 0 0 0.2rem rgba(111, 66, 193, 0.25);
    }

    .btn-gradient {
        background: linear-gradient(to right, #6f42c1, #b667f1);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(to right, #5a34a3, #a051da);
        }

    .form-floating label {
        color: #6c757d;
    }

    .form-floating input::placeholder {
        opacity: 0.5;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="register-card p-5">
                <h2 class="text-center mb-4 text-primary">📝 Register Account</h2>

                <div class="text-danger text-center mb-3" asp-validation-summary="All"></div>

                <form method="post" asp-controller="Account" asp-action="Register">
                    <div class="form-floating mb-3">
                        <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                        <label asp-for="FullName">Full Name</label>
                        <span class="text-danger small" asp-validation-for="FullName"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="UserName" class="form-control" placeholder="User Name" />
                        <label asp-for="UserName">User Name</label>
                        <span class="text-danger small" asp-validation-for="UserName"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <label asp-for="Email">Email</label>
                        <span class="text-danger small" asp-validation-for="Email"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        <label asp-for="Password">Password</label>
                        <span class="text-danger small" asp-validation-for="Password"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <span class="text-danger small" asp-validation-for="ConfirmPassword"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-gradient btn-lg rounded-pill text-white">✨ Create Account</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

