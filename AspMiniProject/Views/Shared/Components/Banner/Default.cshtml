@model List<BannerVM>

<div class="banner-section section pt-120">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-12 mb-30">
                    <div class="single-banner">
                        <img src="~/img/@item.Image" alt="banner" />
                        <div class="banner-content @((item.Id % 2 == 0) ? "left" : "right")">
                            <h1 class="white"><span>@Html.Raw(@item.Title)</span></h1>
                            <a href="#" class="button">Shop Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
