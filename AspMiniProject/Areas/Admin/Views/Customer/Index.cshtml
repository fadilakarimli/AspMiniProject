@model IEnumerable<CustomerVM>
<div class="container mt-5">
    <h1 class="text-center">Customers</h1>
    <a asp-action="Create" class="btn btn-success">Create</a>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>FullName</th>
                    <th>Image</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <!-- FullName column -->
                        <td>@item.FullName</td>

                        <!-- Image column -->
                        <td>
                            <img src="/img/@item.Image"style="width:150px; height:120px;" />

                        </td>


                        <!-- Operations column -->
                        <td>
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info">Detail</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            <form class="d-inline" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

