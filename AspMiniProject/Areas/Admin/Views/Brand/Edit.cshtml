@model BrandEditVM

<div class="container-fluid mt-5">
    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Image" />
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <div class="form-group mt-3">
                <label>Current Image:</label><br />
                <img src="~/img/@Model.Image" width="150" />
            </div>
        }

        <div class="form-group mt-3">
            <label for="Photo">Choose File</label>
            <input type="file" class="form-control" name="Photo" />
        </div>

        <button type="submit" class="btn btn-primary me-2 mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-light mt-3">Cancel</a>
    </form>
</div>
