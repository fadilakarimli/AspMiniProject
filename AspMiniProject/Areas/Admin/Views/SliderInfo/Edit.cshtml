@model SliderInfoEditVM

<div class="container-fluid " style="margin-top:150px; margin-left:100px;width:800px;">
    <form class="forms-sample" asp-action="Edit" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label for="sliderinfo">Discount</label>
            <input asp-for="Discount" class="form-control" id="sliderinfo" maxlength="1000">
            <span class="text-danger" asp-validation-for="Discount"></span>

            <label for="sliderinfo">Title</label>
            <input asp-for="Title" class="form-control" id="sliderinfo" maxlength="1000">
            <span class="text-danger" asp-validation-for="Title"></span>

            <label for="sliderinfo">Description</label>
            <input asp-for="Description" class="form-control" id="sliderinfo" maxlength="1000">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>  