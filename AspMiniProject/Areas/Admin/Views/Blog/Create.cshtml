@model BlogCreateVM

<form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>

        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>

        <label asp-for="PublishedDate"></label>
        <input asp-for="PublishedDate" class="form-control" type="date" />
        <span asp-validation-for="PublishedDate" class="text-danger"></span>

        <input asp-for="Images" class="form-control" id="blogs" multiple />
        <span class="text-danger" asp-validation-for="Images"></span>
    </div>

    <button type="submit" class="btn btn-primary me-2">Submit</button>
    <a asp-action="Index" class="btn btn-light">Cancel</a>
</form>
