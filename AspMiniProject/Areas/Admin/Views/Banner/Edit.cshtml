@model BannerEditVM

<div class="container-fluid mt-5">
    <form class="forms-sample" asp-action="Edit" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <textarea rows="4" cols="50"
                      asp-for="Title" class="form-control" id="editor" placeholder="Title...">@Model.Title</textarea>
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="form-group mt-3">
            <label for="image">Image</label>
            <div>
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="~/img/@Model.Image" alt="Current Image" style="width:150px; height:120px; margin-bottom:10px" />
                }
                else
                {
                    <p>Empty.</p>
                }
            </div>
            <input asp-for="Photo" type="file" class="form-control" id="image" />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>

<script src="//cdn.ckeditor.com/4.22.1/full/ckeditor.js"></script>

<script>
    CKEDITOR.replace('editor');
</script>
