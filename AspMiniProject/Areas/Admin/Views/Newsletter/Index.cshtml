@model List<Newsletter>

@{
    ViewData["Title"] = "Newsletter List";
}

<div class="container mt-5">
    <h2>Subscribed Emails</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Email</td>
                    <td>
                        <a class="btn btn-danger btn-sm" href="/Admin/Newsletter/Delete/@Model[i].Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
